{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/var/lib/audioassistant/audioassistant.db"
  },
  "JwtSettings": {
    "SecretKey": "CHANGE_THIS_IN_PRODUCTION_USE_ENVIRONMENT_VARIABLE",
    "Issuer": "AudioAssistant.Api",
    "Audience": "AudioAssistant.Client",
    "ExpirationMinutes": 60
  },
  "EncryptionSettings": {
    "EncryptionKey": "CHANGE_THIS_IN_PRODUCTION_USE_ENVIRONMENT_VARIABLE"
  },
  "RateLimiting": {
    "RequestsPerMinute": 60
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "chrome-extension://YOUR_EXTENSION_ID"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/audioassistant/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
