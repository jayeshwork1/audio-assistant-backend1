{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=audioassistant.db"
  },
  "JwtSettings": {
    "SecretKey": "PLEASE_CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS",
    "Issuer": "AudioAssistant.Api",
    "Audience": "AudioAssistant.Client",
    "ExpirationMinutes": 1440
  },
  "EncryptionSettings": {
    "EncryptionKey": "PLEASE_CHANGE_THIS_TO_A_SECURE_ENCRYPTION_KEY"
  },
  "RateLimiting": {
    "RequestsPerMinute": 100
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "chrome-extension://*",
      "http://localhost:3000"
    ]
  },
  "GroqSettings": {
    "ApiKey": "PLEASE_CHANGE_THIS_TO_YOUR_GROQ_API_KEY",
    "Endpoint": "https://api.groq.com/openai/v1"
  },
  "WhisperCppSettings": {
    "Endpoint": "http://localhost:8080",
    "Model": "base"
  },
  "OpenAISettings": {
    "Endpoint": "https://api.openai.com/v1"
  },
  "ClaudeSettings": {
    "Endpoint": "https://api.anthropic.com/v1"
  },
  "TranscriptionSettings": {
    "DefaultProvider": "GroqWhisper",
    "FallbackChain": ["GroqWhisper", "WhisperCpp", "OpenAIWhisper"],
    "MaxRetries": 2,
    "RetryDelaySeconds": 1
  },
  "ExternalApis": {
    "GroqEndpoint": "https://api.groq.com/v1",
    "ClaudeEndpoint": "https://api.anthropic.com/v1"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
}
