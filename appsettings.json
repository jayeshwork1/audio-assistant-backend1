{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=audioassistant.db"
  },
  "JwtSettings": {
    "SecretKey": "PLEASE_CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS",
    "Issuer": "AudioAssistant.Api",
    "Audience": "AudioAssistant.Client",
    "ExpirationMinutes": 1440
  },
  "EncryptionSettings": {
    "EncryptionKey": "PLEASE_CHANGE_THIS_TO_A_SECURE_ENCRYPTION_KEY"
  },
  "RateLimiting": {
    "RequestsPerMinute": 100
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "chrome-extension://*",
      "http://localhost:3000"
    ]
  },
  "ExternalApis": {
    "GroqEndpoint": "https://api.groq.com/v1",
    "ClaudeEndpoint": "https://api.anthropic.com/v1"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
}
